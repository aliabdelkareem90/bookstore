extends layout

block content
    form(method='post', action='/book', enctype='multipart/form-data')
        .form-group
            input.form-control(type="text", name="title" placeholder="Book title").mb-2
        .form-group
            input.form-control(type="text", name="desc" placeholder="book description").mb-2
        .form-group
            input.form-control(type="text", name="author" placeholder="Author").mb-2
        .form-group
            input.form-control(type="file", name="cover").mb-2
        input.btn.btn-primary(type="submit", value="Add book", name='submit')