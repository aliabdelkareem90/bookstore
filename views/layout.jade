doctype html
html(lang='en')
  head
    title #{title}
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href='#').ml-3 BookStore
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.nav.navbar-nav.mr-auto.ml-4
          if user
            li.nav-item(class=(title == 'Library'? 'active': ''))
              a.nav-link(href='/').mr-3 Libarary 
          if !user
            li.nav-item(class=(title == 'Register'? 'active': ''))
              a.nav-link(href='/users/register').mr-3 Register
            li.nav-item(class=(title == 'Login'? 'active': ''))
              a.nav-link(href='/users/login').mr-3 Login 
        
        ul.nav.navbar-nav.navbar-right.mr-5
          li.nav-item
              a.nav-link(href='/addbook') Manage
          if user
            li.nav-item
              a.nav-link(href='users/logout') Logout

    .container
      != messages()
      block content
    
    
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="/javascripts/bootstrap.js")
    
